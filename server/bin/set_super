const User = require('../src/models').User;

if (process.argv.length !== 3) {
  console.log('Usage: node bin/set_super blah@fakedomain.gov');
  process.exit(1);
} else {
  const email = process.argv[2];
  User
    .update({ 'super': true }, {where: {email}})
    .then(() => {
      console.log('Success!');
      process.exit(0);
    }).catch(() => {
      console.log('Error!');
      process.exit(1);
    });
}
